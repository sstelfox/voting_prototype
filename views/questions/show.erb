<h3><%= question.text %><% if question.closed? %> <em>(Voting is closed)</em><% end %></h3>
<h4>Voting Progress: <%= question.cast_voters %> / <%= question.possible_voters %> (<%= '%0.2f' % question.percentage_cast %>%)</h4>
<hr/>

<div class="row">
  <div class="col-md-6">
    <h3>Current Results:</h3>
    <table class='table'>
      <thead>
        <th>Answer</th>
        <th>Votes</th>
      </thead>
      <tbody>
      <% question.vote_breakdown.each do |answer, count| %>
        <tr>
          <td><%= answer.text %></td>
          <td><%= count %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-6">
    <h3>Voter Breakdown</h3>
    <table class='table'>
      <thead>
        <th>Email</th>
        <th>Voted?</th>
      </thead>
      <tbody>
      <% question.voters.each do |voter| %>
        <tr>
          <td><%= voter.email %></td>
          <td><%= voter.vote_cast? ? 'Yes' : 'No'  %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
